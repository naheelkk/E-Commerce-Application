<section>
  <div class="container">
    <table class="table mt-5">
      <thead>
        <tr>
          <th scope="col">Product</th>
          <th scope="col">Title</th>
          <th scope="col">Price</th>
          <th scope="col">Quantity</th>

        </tr>
      </thead>
      <tbody>
        {{#each products}}
          <tr>
            <td><img
                style="width:70px;height:70px"
                src="/images/{{this.product._id}}.jpg"
                alt=""
              /></td>
            <td>{{this.product.Name}}</td>
            <td>Rs.{{this.product.Price}}</td>
            <td>
              <button class="cart-item-count mr-3" onclick="changeQuantity('{{this._id}}','{{this.product._id}}',-1)">{{#if this.quantity}}-</button>
                {{/if}}
                <span id="{{this.product._id}}">{{this.quantity}}</span>
              <button class="cart-item-count ml-3" onclick="changeQuantity('{{this._id}}','{{this.product._id}}',1)">+</button>
            </td>
            <td>
              <a href="" class="btn btn-danger">Remove</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    <hr>
    <h3 class="float-right mr-5 mt-4">Total: 250000</h3>
    <a href="/place-order" class="btn btn-success mt-3">Place Order</a>
  </div>
</section>